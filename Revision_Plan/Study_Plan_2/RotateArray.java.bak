/*
Right Rotate an Array by 1 or K Positions
Concept: Shift elements to the right and bring the last to front.
 Use Case: Buffer manipulation.
Input: arr = [10, 20, 30, 40, 50]
Right rotated array by 2 positions: [40, 50, 10, 20, 30]
*/
import java.util.Scanner;
public class RotateArray
{
	public static void main(String x[])
	{
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the size of Array: ");
		int size = sc.nextInt();
		int nums[] = new int[size];
		System.out.print("Enter the values in Array: ");
		for(int i = 0; i < nums.length; i++)
		{
			nums[i] = sc.nextInt();
		}
		// rotate array by K'th Positions
		System.out.print("Enter the value of k: ");
		int k = sc.nextInt();
		
		Rotate(nums, 0, nums.length - 1);
		Rotate(nums, 0, k-1);
		Rotate(nums, k, nums.length - 1);
		
		//diasplay array
		System.out.println("Rotated Array");
		for(int i = 0; i < nums.length; i++)
		{
			System.out.print(" "+nums[i]);
		}
	}
	static void Rotate(int arr, int s, int e)
	{
		while(s < e)
		{
			arr[s] = arr[s] + arr[e];
			arr[e] = arr[s] - arr[e];
			arr[s] = arr[s] - arr[e];
			s++;
			e--;
		}
	}
}