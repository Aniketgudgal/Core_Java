public class Pattern
{
	public static void main(String x[])
	{
		for(int i = 1; i <= 7; i++)
		{
			for(int j = 1; j <= 7; j++)
			{
				if(j <= i)
				{
					if(j % 2 == 0)
					{
						System.out.print(" "+i);
					}
					else
					{
						System.out.print(" *");
					}
				}
			}
			System.out.println();
		}
	}
}