public class Pattern
{
	public static void main(String x[])
	{
		int a = 1;
		for(int i = 1; i <= 7; i++)
		{
			for(int j = 1; j <= 7; j++)
			{
				if(((j < i*2 )&& i <= 4))
				{
					if(j % 2 == 0)
					{
						System.out.print(" *");
					}
					else
					{
						System.out.print(" "+i);
						a = i;
					}
				}
				else if((j < ( (8 - i) * 2)  && i > 4)
				{
					if(j % 2 == 0)
					{
						System.out.print(" *");
					}
					else
					{
						System.out.print(" "+a);
					}
				}
				
			}
			System.out.println();
			if(i > 3)
			{
				--a;
			}
		}
	}
}