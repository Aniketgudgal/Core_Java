//9. Merge Two Arrays
/*
4. Merge Two Sorted Arrays (In-place)
Approach: Two Pointers from end
Example: arr1 = [1,3,5,0,0,0], arr2 = [2,4,6] â†’ [1,2,3,4,5,6]
*/
import java.util.Scanner;
public class MergeTwoArray
{
	public static void main(String x[])
	{
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the size of array is 1: ");
		int size1 = sc.nextInt();
		int num1[] = new int[size1];
		//insert values in array 1st
		System.out.print("Enter the value in array 1: ");
		for(int i=0; i < num1.length; i++)
		{
			num1[i] = sc.nextInt();
		}
		
		System.out.print("Enter the size of array 2: ");
		int size2 = sc.nextInt();
		int num2[] = new int[size2];
		System.out.print("Enter the value in array 2: ");
		//insert values in 2nd array
		for(int i = 0; i < num2.length; i++)
		{
			num2[i] = sc.nextInt();
		}
		
			int i = num1.length - num2.length - 1;
			int j = num2.length - 1;
			int k = (num1.length - num2.length) + num2.length -1;
			while(j >=0 && i >= 0)
			{
				if(num1[i] >= num2[j]) // 5 < 6 
				{
					num1[k] = num1[i]; 
					i--;
					k--;
				}
				else
				{
					num1[k] = num2[j]; // 5 > 6
					j--;
					k--;
				}
			}
			while(j >= 0)
			{
				num1[k] = num2[j];
				j--;
				k--;
			}
			for(int l = 0; l < num1.length; l++)
			{
				System.out.print(" "+num1[l]);
			}
		
		
	}
}