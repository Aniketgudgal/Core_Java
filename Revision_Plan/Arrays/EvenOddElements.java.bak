/*
6. Count Number of Even and Odd Elements
 Problem:
Count how many even and odd elements are present.
Example:
Input: [1, 2, 3, 4, 5, 6]  
Output: Even: 3, Odd: 3
*/
import java.util.Scanner;
public class EvenOddElements
{
	public static void main(String x[])
	{
		Scanner sc = new Scanner(System.in);
		// take the size of array from user
		System.out.print("Enter the size of array: ");
		int size = sc.nextInt();
		int[] nums = new int[size];
		
		// take input from user of array elements
		for(int i = 0; i < nums.eln
		)
		int even = 0 , odd = 0;
		for(int i = 0; i < nums.length; i++)
		{
			if(nums[i] % 2 == 0)
			{
				even++;
			}
			else
			{
				odd++;
			}
		}
		System.out.println("Even Elements in array are: "+even);
		System.out.println("Odd Elements in array are: "+odd);
	}
}