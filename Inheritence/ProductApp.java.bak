/*
3. Question:
 Create a base class Product with fields id, name, and price. Create subclasses Electronics (10% discount) and Clothing (20% discount).
 Write a program to calculate and print final prices after applying discounts.
Explanation:
 This tests constructor chaining and method overriding for price calculation.
*/
import java.util.Scanner;
class Product
{
	int id;
	String name;
	int price;
}
class Electronics extends Product
{
	void displayDiscount()
	{
		int disper = 10;
		float discount = (disper*price)/100;
		System.out.println("The Discount on Electronics Product is: "+discount);
	}
}
class Clothing extends Product
{
	void displayDiscount()
	{
		int disper = 20;
		float discount = (disper*price)/100;
		System.out.println("The Discount on Clothing Product is: "+discount);
	}
}
public class ProductApp
{
	public static void main(String x[])
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Welcome to Product House");
		String exit = " ";
		Electronics e = new Electronics();
		Clothing c = new Clothing();
		do{
			System.out.println("1. Add Product 2. Discount on Electronics Product 3. Discount on Clothing 3. Exit");
			int choice = sc.nextInt();
			switch(choice)
			{
				case 1:
					System.out.println("1. Electronics 2. Clothing \nEnter product type:");
					int product = sc.nextInt();
					System.out.print("Enter the id of Product: ");
					int pid = sc.nextInt();
					System.out.print("Enter the product name: ");
					String pname = sc.next();
					System.out.print("Enter the product price: ");
					int pprice = sc.nextInt();
					if(product == 1)
					{
						e.id = pid;
						e.price = pprice;
						e.name = pname;
					}
					else if(product == 2)
					{
						c.id = pid;
						c.name = pname;
						c.price = pprice;
					}
					else
					{
						System.out.println("Enter the valid input");
					}
					break;
				case 2:
					e.displayDiscount();
					break;
				case 3:
					c.displayDiscount();
					break;
				case 4:
					System.out.println("Do You want to exit");
					exit = sc.next();
					break;
				default:
					System.out.println("Invalid Input");
			}
		}while(!exit.equals("yes"));
	}
}